{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>NomPhoto</th>
                <td>{{ produit.nomPhoto }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ produit.dateCreation ? produit.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ produit.slug }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Dispo</th>
                <td>{{ produit.dispo ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateMaj</th>
                <td>{{ produit.dateMaj ? produit.dateMaj|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('prod_index') }}">back to list</a>

    <a href="{{ path('prod_edit', {'id': produit.id}) }}">edit</a>

    {{ include('prod/_delete_form.html.twig') }}
{% endblock %}
