{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>NomPhoto</th>
                <th>Description</th>
                <th>DateCreation</th>
                <th>Slug</th>
                <th>Prix</th>
                <th>Dispo</th>
                <th>DateMaj</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.nomPhoto }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.dateCreation ? produit.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ produit.slug }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.dispo ? 'Yes' : 'No' }}</td>
                <td>{{ produit.dateMaj ? produit.dateMaj|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('prod_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('prod_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prod_new') }}">Create new</a>
{% endblock %}
