{% extends 'base.html.twig' %}


{% block stylesheets %}

    <link href="{{ asset('css/pageLogin.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/styles.css') }}" rel="stylesheet"/>

{% endblock %}



{% block body %}

    {# DEBUT NAVBAR #}
    {{ include('partials/_navbar.html.twig') }}
    {# FIN NAVBAR #}


    {# DEBUT LOGIN FORM #}
    <div class="login-form">
        <form id="formLog" method="post" autocomplete="off">
            {% if error %}
                <div class="alert alert-danger ">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <h3>formulaire de connexion </h3>
            <div class="login-form-content">
                <div class="form-group">

                    {# ----input EMAIL--  -#}
                    <input id="inputLog" type="email" class="form-control" name="email" value="{{ last_username }}"
                           placeholder="Saisir votre Email" required autofocus>
                </div>
                <div class="form-group">
                    {# ----input PASSWORD--  -#}
                    <input id="inputLog" type="password" class="form-control" name="password"
                           placeholder="Saisir votre mot de passe" required autofocus/>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button id="buttonLog" type="submit" class="btn btn-primary">Connexion</button>
            </div>


            {# {% if app.user %}
         <div class="mb-3">
             You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
         </div>
     {% endif %} #}


        </form>
    </div>
    {# FIN LOGIN FORM #}
{% endblock %}


